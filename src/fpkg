#!/bin/bash
PKGDIR="$FPKG_ROOT/var/pkg"
GITDIR="$FPKG_ROOT/var/fpkg/git"
lock="/tmp/lock"
touch $lock
while [ ! -z "$1" ]; do
	case $1 in
		i|install) spkg "$2" ; ipkg "$2" ; ipkg > $2.d ;;
		u|update) upkg "$2" ;;
		l) lpkg "$2" ;;
		q|query) qpkg "$2" ;;
		r|remove) rpkg "$2" ;;
		s|spkg) spkg "$2" ;;
		c|src|compile|make|source) cpkg "$2" ;;
		sq) spkg --query "$2" ;;

	esac
shift
done
rm $lock
